<div class="col-md-12 rental-request-new">
  <h1>Request a Rental Cat</h1>

  <%= render 'shared/errors' %>
  <form action="<%= cat_rental_requests_url %>" method="post" accept-charset="utf-8">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label for="cat_id">Cat to Rent</label>
      <select name="cat_rental_request[cat_id]" id="cat_id">
        <option></option>
        <% cat_options.each do |(id, name)| %>
          <option value="<%= id %>"><%= name %></option>
        <% end %>
      </select>
    </div>

    <div class="form-group">
      <label for="start_date">Start Date</label>
      <input type="date" name="cat_rental_request[start_date]"
             id="start_date" value="<%= @rental_request.start_date %>">
    </div>

    <div class="form-group">
      <label for="end_date">End Date</label>
      <input type="date" name="cat_rental_request[end_date]"
             id="end_date" value="<%= @rental_request.end_date %>">
    </div>

    <input type="submit" value="Submit Request" class="btn btn-primary">
  </form
</div>
